<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Plantoid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:colorPrimaryDark">@color/md_theme_light_onPrimaryContainer</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <!-- Error color. -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <!-- Material Design surface color. -->
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="backgroundColor">@color/md_theme_light_surface_container_low</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="globalSearchBar" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:editTextColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textColorHint">@color/md_theme_Primary50</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:searchIcon">@drawable/search_icon</item>
    </style>

    <!-- TextView Styles -->
    <style name="textViewOnSurface" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>

    <style name="textViewOnPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="categoryTextView" parent="textViewOnSurface">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mainRecyclerViewTitleTextView" parent="textViewOnSurface">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="categoryTagTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="globalTagTextView" parent="categoryTagTextView">
        <item name="android:textColor">@color/md_theme_light_secondary</item>
    </style>

    <!-- Only for branding text -->
    <style name="plantoidLogoText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/rancho</item>
        <item name="android:textColor">@color/md_theme_Primary90</item>
    </style>

    <style name="item_card_main" parent="CardView">
        <item name="cardBackgroundColor">@color/md_theme_light_surface_container_highest</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="navBarButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="navBarBackground">
        <item name="android:background">@color/md_theme_Neutral50</item>
    </style>

    <!-- EditText styles -->
    <style name="textInputBar">
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>