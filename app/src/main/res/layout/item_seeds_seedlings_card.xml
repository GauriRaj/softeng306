<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="165dp"
    android:layout_margin="5dp"
    style="@style/item_card_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/item_card_background">
        <ImageView
            android:id="@+id/key_imageView"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/debug_image"
            android:contentDescription="Item key image" />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:background="@drawable/item_card_horizontal_gradient_background">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="45dp">
                <TextView
                    android:id="@+id/title_textView"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:maxLines="2"
                    style="@style/textViewOnSurface"/>
                <TextView
                    android:id="@+id/price_textView"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    style="@style/textViewOnSurface"/>
            </LinearLayout>
            <!-- Inset divider -->
            <TextView
                android:layout_width="145dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                style="@style/insetDivider"/>
            <!-- Item tags -->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/seed_tag_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/seed_tag_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        style="@style/drawables_style"
                        android:contentDescription="Seed/Seedling category tag icon image" />
                    <TextView
                        android:id="@+id/seed_tag_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        style="@style/categoryTagTextView"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/category_tag_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/category_tag_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        style="@style/drawables_style"
                        android:contentDescription="Plant category tag icon image" />
                    <TextView
                        android:id="@+id/category_tag_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        style="@style/categoryTagTextView"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/global_tag_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/global_tag_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        style="@style/drawables_style"
                        android:contentDescription="Item global tag icon image" />
                    <TextView
                        android:id="@+id/global_tag_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        style="@style/categoryTagTextView"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>