<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_surface_container_highest"
    android:orientation="vertical"
    android:theme="@style/Theme.Plantoid"
    tools:context=".Activities.MainActivity">

    <!-- Top bar with logo, user welcome and search bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_light_primary"
        android:paddingHorizontal="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="91dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo_main_plantoid" />

            <TextView
                style="@style/plantoidLogoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/app_name"
                android:textSize="45sp" />

        </LinearLayout>

        <!-- Search Bar -->
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:layout_weight="0"
        android:background="@color/md_theme_light_primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textLog"
                style="@style/textViewOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Log in"
                android:textAlignment="center"
                android:textColor="@color/md_theme_Primary90"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                style="@style/textViewOnPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Username"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextUsername"
                style="@style/textInputBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView3"
                style="@style/textViewOnPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Password"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextPassword"
                style="@style/textInputBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnNewAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:text="Create New Account" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        style="@style/navBarBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/discover_navbar_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/discover_icon"
                app:tint="@color/md_theme_Primary90" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="Discover"
                android:textAlignment="center"
                android:textColor="@color/md_theme_Primary90" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wishlist_navbar_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/wishlist_icon"
                app:tint="@color/md_theme_Neutral80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="Wishlist"
                android:textAlignment="center"
                android:textColor="@color/md_theme_Neutral80" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_navbar_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/profile_icon"
                app:tint="@color/md_theme_Neutral80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="My Plantoid"
                android:textAlignment="center"
                android:textColor="@color/md_theme_Neutral80" />
        </LinearLayout>

    </LinearLayout>

    <!-- Main Scrolling Section -->

    <!-- TODO Navigation bar -->

</LinearLayout>