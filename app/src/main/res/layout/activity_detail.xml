<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    android:theme="@style/Theme.Plantoid"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="@color/md_theme_light_primary"
        android:elevation="10dp">
        <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewOnPrimary"
            android:textSize="20sp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/detail_back_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_back_arrow"
        android:elevation="11dp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/image_pager"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/detailTitleLayout">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/detail_title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Title"
                    android:padding="10dp"
                    style="@style/detailTitleTextView"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/detail_price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$42.00"
                    android:padding="10dp"
                    style="@style/detailPriceTextView"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <Button
                android:id="@+id/wishlist_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="50dp"
                android:text="+ Add to Wishlist"
                android:background="@drawable/category_tag_background"/>

            <TextView
                android:id="@+id/detail_description_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:paddingHorizontal="20dp"
                style="@style/textViewOnSurface"
                android:textSize="16sp"
                android:text="@string/lorem_ipsum"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>



</RelativeLayout>