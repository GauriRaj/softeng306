<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="225dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="5dp">
        <RelativeLayout
            android:id="@+id/category_tag_layout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/category_tag_background"
            android:backgroundTint="@color/md_theme_light_primaryContainer"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/category_tag_imageView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                style=""
                app:tint="@color/md_theme_light_primary"/>
            <TextView
                android:id="@+id/category_tag_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                style="@style/categoryTagTextView"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/global_tag_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:background="@drawable/category_tag_background"
            android:backgroundTint="@color/md_theme_light_secondaryContainer"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/global_tag_imageView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                app:tint="@color/md_theme_light_secondary"/>
            <TextView
                android:id="@+id/global_tag_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                style="@style/globalTagTextView"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp"/>
        </RelativeLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        style="@style/item_card_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/key_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/debug_image"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0">
                <TextView
                    android:id="@+id/title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Title"
                    android:textSize="12sp"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights"
                    style="@style/textViewOnSurface"/>
                <TextView
                    android:id="@+id/price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="$42.00"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:fontFamily="sans-serif-medium"
                    android:layout_weight="0"
                    tools:ignore="NestedWeights"
                    style="@style/textViewOnSurface"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>